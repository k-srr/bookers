<!DOCTYPE html>
<html>
  <head>
  </head>
  <body>
    <h1>Editing Book</h1>
    <%= form_with model: @book, url: "update_book_path(@book.id)", method: :patch  do |f| %>
      <form class="new_book" id="new_book" action="/books" accept-charset="UTF-8" method="post">
        <div class="field">
          <label class="book_title">Title</label>
          <%= f.text_field :title %>
        </div>
        <div class="field">
          <label for="book_body">Body</label>
          <%= f.text_area :body %>
        </div>
        <div class="actions">
          <%= f.submit 'Update Book' %>
        </div>
      </form>
    
    <a class="show" href="/book">Show</a>
    |
    <a class="back" href="/books">Back</a>
    <% end %>
  </body>
</html>

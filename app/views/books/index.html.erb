<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href"books.scss"/>
  </head>
  <body>
    <p id="notice"></p>

    <h1>Books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
       </thead>
      <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td>
            <a class="show" href="/book">Show</a>
          </td>
          <td>
            <a>Edit</a>
          </td>
          <th>
            <a data-confirm="Are you sure?" >Destroy</a>
          </th>
        </tr>
      </tbody>
      <% end %>
    </table>

      <h2>New book</h2>
      <%= form_with model: @book, url: '/books', method: :post  do |f| %>
        <form class="new_book" id="new_book" action="/books" accept-charset="UTF-8" method="post">
          <div class="field">
            <label class="book_title">Title</label>
            <%= f.text_field :title %>
          </div>
          <div class="field">
            <label for="book_body">Body</label>
            <%= f.text_area :body %>
          </div>
          <div class="actions">
            <%= f.submit 'Create Book' %>
          </div>
        </form>
      <% end %>
  </body>
</html>
